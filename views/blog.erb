<h1>My Blog Page</h1>

<hr>

<h3>Write a New Blog</h3>

<hr>

<table>
  
  <tr>
    <td class="bold">Title:</td>
    <td><input type="text" class="title border" id="newBlogTitle"></td>
  </tr>

  <tr>
    <td></td>
    <td><img src="" id="photoImage"></td>
  </tr>
  <tr>
    <td class="bold">Image:</td>
    <td><input type="file" accept="image/*" id="photo" onchange="evaluateAndResize('photo')">
  </tr>

  <tr>
    <td class="bold">Body:</td>
    <td>
      <div class="border" id="newBlogText" contenteditable="true">
          <!-- this inner div is needed to make it work proper in IE   -->
          <div style="cursor: text"></div>
      </div>
    </td>
  </tr>

  <tr>
    <td></td>
    <td>
      <button class="fa fa-bold" onclick="document.execCommand('bold');"></button>
      <button class="fa fa-italic" onclick="document.execCommand('italic');"></button>

      <button class="fa fa-underline" onclick="document.execCommand('underline');"></button>
      <button class="fa fa-strikethrough" onclick="document.execCommand('strikeThrough');"></button>
      <button class="fa fa-superscript" onclick="document.execCommand('superscript');"></button>
      <button class="fa fa-subscript" onclick="document.execCommand('subscript');"></button>
      <button class="fa fa-link" onclick="document.execCommand('createLink');"></button>
      <button class="fa fa-chain-broken" onclick="document.execCommand('unlink');"></button>
      <button class="fa fa-list-ol" onclick="document.execCommand('insertOrderedList');"></button>
      <button class="fa fa-list-ul" onclick="document.execCommand('insertUnorderedList');"></button>
      <button class="fa fa-indent" onclick="document.execCommand('indent');"></button>
      <button class="fa fa-outdent" onclick="document.execCommand('outdent');"></button>
      <button class="fa fa-align-center" onclick="document.execCommand('justifyCenter');"></button>
      <button class="fa fa-align-justify" onclick="document.execCommand('justifyFull');"></button>
      <button class="fa fa-align-left" onclick="document.execCommand('justifyLeft');"></button>
      <button class="fa fa-align-right" onclick="document.execCommand('justifyRight');"></button>
      <button class="fa fa-undo" onclick="document.execCommand('undo');"></button>
      <button class="fa fa-repeat" onclick="document.execCommand('redo');"></button>
    </td>
  </tr>

</table>

<br>

<!-- <button id="btnPostNewBlog" onclick="parseDivText()">Submit Blog</button> -->
<button id="btnPostNewBlog" onclick="postNewBlog()">Submit Blog</button>

<hr>

<h3>Previous Blogs</h3>

<hr>

<% blogs_array.reverse_each do |blog| %>

  <h4><%= blog["blog_title"] %></h4>
  <p><i><%= blog["blog_date"] %></i></p>
  <% if blog.include?("blog_photo") %>
    <img class="border" src="images/blog/<%=blog["blog_photo"]%>" alt=""</p>
  <% end %>
  <p><%= blog["blog_text"] %></p>

  <hr>

<% end %>