<h1>My Blog Page</h1>

<hr>

<h3>Write New Blog</h3>

<table>
  <tr>
    <td class="bold">Title:</td>
    <td><input type="text" class="title" id="newBlogTitle"></td>
  </tr>
  <tr>
    <td class="bold">Body:</td>
    <td><textarea id="newBlogText"></textarea></td>
  </tr>
  <tr>
    <td></td>
    <td>
      <button onclick="formatText('b')">B</button>
      <button onclick="formatText('i')">I</button>
      <button onclick="formatText('u')">U</button>
    </td>
  </tr>
</table>

<br>
<button id="btnPostNewBlog">Submit</button>

<hr>

<h2>Previous Blogs</h2>

<hr>

<% blogs_array.each do |blog| %>

  <h3><%=blog["blog_title"]%></h3>
  <p><i><%=blog["blog_date"]%></i></p>
  <p><%=blog["blog_text"].gsub(/\n/){"<br>"}%></p>
  <hr>

<% end %>